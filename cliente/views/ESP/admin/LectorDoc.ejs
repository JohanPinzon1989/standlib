<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

  <% usuario.forEach((user)=> { if (user.Rol == "Administrar"  || user.Rol == "Editar" || user.Rol == "Leer") {%>
  <% for (var cont = 0; cont < documento.length; cont ++) { %>
  <title><%= documento[cont].Nombre %></title>
  <% } %>
</head>

<body style="background-color: #585858;">
  <div class="row m-1">
    <div class="row m-5">
      <div class="grid-container">
        <div class="grit-item">
          <div class="pagination justify-content-center" style="margin-bottom: 15px;">
            <button id="prevPage" class="btn btn-info" style="margin-right: 5px;">Anterior</button>
            <span id="currentPage" style="background-color: white;">1</span>
            <span style="background-color: white;">de</span>
            <span id="totalPages" style="background-color: white;"><%= imagenes.length %></span>

            <button id="nextPage" class="btn btn-info" style="margin-left: 5px;">Siguiente</button>
          </div>
          <div class="pagination justify-content-center" style="margin-bottom: 20px;">
            <select id="imageSelector" class="form-select" style="max-width: 235px; text-align: center;">
              <option value="0" selected>Seleccionar página</option>
              <% for (var cont = 0; cont < imagenes.length; cont++) { %>
              <option value="<%= cont %>"><%= cont + 1 %></option>
              <% } %>
            </select>
          </div>
          <% for (var cont = 0; cont < imagenes.length; cont++) { %>
          <div class="imagen" id="imagen<%= cont %>" style="display: <%= cont === 0 ? 'block' : 'none'; %>">
            <img src="<%= imagenes[cont].Ruta %>" alt="<%= imagenes[cont].Nombre %>" style="
                  top: 0;
                  left: 0;
                  width: 93%;
                  background-color: rgba(0, 0, 0, 0.7);
                  display: flex;
                  justify-content: center;
                  align-items: center;
                  
                " />
          </div>
          <% } %>
        </div>
      </div>
    </div>



    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const imagenes = document.querySelectorAll('.imagen');
        const prevPageButton = document.getElementById('prevPage');
        const nextPageButton = document.getElementById('nextPage');
        const currentPageElement = document.getElementById('currentPage');
        const totalPagesElement = document.getElementById('totalPages');
        const imageSelector = document.getElementById('imageSelector');

        let currentPage = 0;

        function showCurrentImage() {
          imagenes.forEach((imagen, index) => {
            imagen.style.display = index === currentPage ? 'block' : 'none';
          });
          currentPageElement.textContent = currentPage + 1;
        }

        prevPageButton.addEventListener('click', function () {
          if (currentPage > 0) {
            currentPage--;
            showCurrentImage();
          }
        });

        nextPageButton.addEventListener('click', function () {
          if (currentPage < imagenes.length - 1) {
            currentPage++;
            showCurrentImage();
          }
        });

        imageSelector.addEventListener('change', function () {
          currentPage = parseInt(imageSelector.value);
          showCurrentImage();
        });

        currentPageElement.textContent = currentPage + 1;
        totalPagesElement.textContent = imagenes.length;
        showCurrentImage();
      });

    </script>



    <script>
      // Función para deshabilitar el menú contextual de clic derecho
      function deshabilitarMenuContextual(event) {
        event.preventDefault(); // Evita que se muestre el menú contextual
      }

      // Asigna la función a la acción de clic derecho en todo el documento
      document.addEventListener("contextmenu", deshabilitarMenuContextual);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"></script>

