                <div class="mb-3">
                  <label for="Industria_ing" class="form-label">Industria en ingles</label>
                  <input
                    placeholder="ICONTEC"
                    type="text"
                    class="form-control"
                    name="Industria_ing"
                    id="Industria_ing"
                    aria-describedby="textHelp"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="Abreviacion" class="form-label">Abreviacion</label>
                  <input
                    placeholder="IND"
                    type="text"
                    class="form-control"
                    name="Abreviacion"
                    id="Abreviacion"
                    aria-describedby="textHelp"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="Abreviacion_ing" class="form-label">Abreviacion en ingles</label>
                  <input
                    placeholder="IIND"
                    type="text"
                    class="form-control"
                    name="Abreviacion_ing"
                    id="Abreviacion_ing"
                    aria-describedby="textHelp"
