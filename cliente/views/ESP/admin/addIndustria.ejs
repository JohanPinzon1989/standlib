<%- include ('../partials/admi/header') %>

<% usuario.forEach((user)=> { 
  if (user.Rol == "Administrar") {%>
  <!--  Header Start -->
  <%- include ('../partials/admi/head') %>
  <!--  Header End -->
  <%- include ('../partials/admi/NavIndustria') %>
  
  <div
    class="container-fluid"
    style="overflow: scroll; height: calc(115vh - 80px)"
  >
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title fw-semibold mb-4">Registro industria</h5>
          <div class="card">
            <div class="card-body">
              <form action="/addInd" method="POST">
                <div class="mb-3">
                  <label for="Industria" class="form-label">Industria</label>
                  <input
                    
                    placeholder="ICONTEC"
                    type="text"
                    class="form-control"
                    name="Industria"
                    id="Industria"
                    aria-describedby="textHelp"
                    required
                  />
