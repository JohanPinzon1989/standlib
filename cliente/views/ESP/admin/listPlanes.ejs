  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
          <h5 class="card-title fw-semibold mb-4">
            Listado de facturas
          </h5>

          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Id</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Factura</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Fecha de inicio</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Fecha de finalizacion</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Estado</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Acciones</h6>
                </th>
              </tr>
            </thead>
            <tbody>
              <% fact.forEach((factura)=> { %>
              <tr>
                <td>
                  <h6><%= factura.Id %></h6>
                </td>
                <td>
                  <h6><%= factura.NumFactura %></h6>
                </td>
                <td>
                  <h6><%= factura.Fecha_inicio %></h6>
                </td>
                <td>
                  <h6 class="fw-semibold mb-0"><%= factura.Fecha_fin %></h6>
                </td>
                <td>
                  <h6 class="fw-semibold mb-0"><%= factura.Estado %></h6>
                </td>
                <td>
                  <div class="btn-group dropend" style="width: 8rem">
                    <button
                      class="btn btn-secondary ti ti-list-check"
                      type="button"
                      data-bs-toggle="dropdown"
                      data-bs-auto-close="true"
                      aria-expanded="false"
                    ></button>
                    <ul class="dropdown-menu">
                      <li>
                        <a
                          type="button"
                          class="dropdown-item"
                          data-bs-toggle="modal"
                          data-bs-target="#ModalLect<%= factura.Id %>"
                          >Leer</a
                        >
                      </li>
                      <li>
                        <a
                          type="button"
                          class="dropdown-item"
                          data-bs-toggle="modal"
                          data-bs-target="#Modal<%= factura.Id %>"
                          >Editar</a
                        >
                      </li>
                      <li>
                        <a
                          type="button"
                          class="dropdown-item"
                          href="/delFact/<%= factura.Id %>"
                          >Eliminar</a
                        >
                      </li>
                    </ul>
                  </div>
                </td>
                
              </tr>
 <!--Editar factura-->
 <div class="modal fade" id="Modal<%= factura.Id %>" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editar factura NÂ° <%= factura.NumFactura %></h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="/uploadFact" method="POST">
          <input id="Id" name="Id" value="<%= factura.Id %>" type="hidden" />
          <% ten.forEach((tenant)=> { if(tenant.Id == factura.Tenant_Id) { %>
          <div class="mb-3">
            <label for="Nombre_org" class="form-label">Nombre Organizacion</label>
            <input
              value="<%= tenant.Nombre_org %>"
              type="text"
              class="form-control"
              name="Nombre_org"
              id="Nombre_org"
              disabled
            />
          </div>
          <% }}) %>
          <div class="mb-3">
            <label for="Fecha_inicio" class="form-label">Fecha de inicio</label>
            <input
              value="<%= factura.Fecha_inicio%>"
              type="date"
              pattern="\d{4}-\d{2}-\d{2}"
              class="form-control"
              name="Fecha_inicio"
              id="Fecha_inicio"
              aria-describedby="textHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="Fecha_fin" class="form-label">Fecha de finalizacion</label>
            <input
              value="<%= factura.Fecha_fin %>"
              type="date"
              pattern="\d{4}-\d{2}-\d{2}"
              class="form-control"
              name="Fecha_fin"
              id="Fecha_fin"
              aria-describedby="textHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="CostoUSD class="form-label">Valor en dolares</label>
            <input
              value="<%= factura.CostoUSD %>"
              type="number"
              step="0.01"
              class="form-control"
              name="CostoUSD"
              id="CostoUSD"
              aria-describedby="textHelp"
              required
            />
            <span class="validity"></span>
          </div>
          <div class="mb-3">
            <label for="CostoCOP" class="form-label">Valor en Pesos Colombianos</label>
            <input
              value="<%= factura.CostoCOP %>"
              type="number"
              step="0.01"
              class="form-control"
              name="CostoCOP"
              id="CostoCOP"
              aria-describedby="textHelp"
              required
            />
            <span class="validity"></span>
          </div>
          <div class="mb-3">
            <label for="Estado" class="form-label">Estado</label>
            <select
              class="form-control"
              name="Estado"
              id="Estado"
              aria-describedby="text"
              disabled
            >
              <option  value="Vigente" <%= factura.Estado=='Vigente' ? "selected" : '' %> >Vigente</option>
              <option  value="Vencido" <%= factura.Estado=='Vencido' ? "selected" : '' %> >Vencido</option>
            </select>
          </div>                   
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="submit">Guardar</button>
      </form>
        <button class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
        
      </div>
    </div>
  </div>
</div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>

