                  <option value="Inactivo">Inactivo</option>
                </select>
              </div>
              <button
                type="submit"
                class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2"
              >
                Agregar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
