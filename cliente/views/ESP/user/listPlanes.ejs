<%- include ('../partials/User/header') %>

<% usuario.forEach((user)=> { 
  if (user.Perfil == "Administrador") {%>
  <!--  Header Start -->
  <%- include ('../partials/User/head') %>
  <!--  Header End -->
  
  <div
  class="container-fluid"
  style="overflow: scroll; height: calc(115vh - 80px)"
>
  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
          <h5 class="card-title fw-semibold mb-4">
            Listado de facturas
          </h5>

          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Id</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Factura</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Fecha de inicio</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Fecha de finalizacion</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Estado</h6>
                </th>
                <th>
                  <h6 class="fw-semibold mb-0 fs-4">Acciones</h6>
                </th>
              </tr>
            </thead>
            <tbody>
              <% fact.forEach((factura)=> { %>
              <tr>
                <td>
                  <h6><%= factura.Id %></h6>
                </td>
                <td>
                  <h6><%= factura.NumFactura %></h6>
                </td>
                <td>
                  <h6><%= factura.Fecha_inicio %></h6>
                </td>
                <td>
                  <h6 class="fw-semibold mb-0"><%= factura.Fecha_fin %></h6>
                </td>
                <td>
                  <h6 class="fw-semibold mb-0"><%= factura.Estado %></h6>
                </td>
                <td>
                  <div class="btn-group dropend" style="width: 8rem">
                    <button
                      class="btn btn-secondary ti ti-list-check"
                      type="button"
                      data-bs-toggle="dropdown"
                      data-bs-auto-close="true"
                      aria-expanded="false"
                    ></button>
                    <ul class="dropdown-menu">
                      <li>
                        <a
                          type="button"
                          class="dropdown-item"
                          data-bs-toggle="modal"
                          data-bs-target="#ModalLect<%= factura.Id %>"
                          >Leer</a
                        >
                      </li>
                    </ul>
                  </div>
                </td>
                
              </tr>
              <!--Ver datos de factura factura-->
              <div class="modal fade" id="ModalLect<%= factura.Id %>" data-bs-backdrop="static">
                <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Factura NÂ° <%= factura.NumFactura %></h5>
                      <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      
                        <input id="Id" name="Id" value="<%= factura.Id %>" type="hidden" />
                        <% ten.forEach((tenant)=> { if(tenant.Id == factura.Tenant_Id) { %>
                        <div class="mb-3">
                          <label for="Nombre_org" class="form-label">Nombre Organizacion</label>
                          <input
                            value="<%= tenant.Nombre_org %>"
                            type="text"
                            class="form-control"
                            name="Nombre_org"
                            id="Nombre_org"
                            disabled
                          />
                        </div>
                        <% }}) %>
                        <div class="mb-3">
                          <label for="Fecha_inicio" class="form-label">Fecha de inicio</label>
                          <input
                            value="<%= factura.Fecha_inicio%>"
                            type="date"
                            pattern="\d{4}-\d{2}-\d{2}"
                            class="form-control"
                            name="Fecha_inicio"
                            id="Fecha_inicio"
                            disabled
                          />
                        </div>
                        <div class="mb-3">
                          <label for="Fecha_fin" class="form-label">Fecha de finalizacion</label>
                          <input
                            value="<%= factura.Fecha_fin %>"
                            type="date"
                            pattern="\d{4}-\d{2}-\d{2}"
                            class="form-control"
                            name="Fecha_fin"
                            id="Fecha_fin"
                            disabled
                          />
                        </div>
                        <div class="mb-3">
                          <label for="CostoUSD class="form-label">Valor en dolares</label>
                          <input
                            value="<%= factura.CostoUSD %>"
                            type="number"
                            step="0.01"
                            class="form-control"
                            name="CostoUSD"
                            id="CostoUSD"
                            disabled
                          />
                          <span class="validity"></span>
                        </div>
                        <div class="mb-3">
                          <label for="CostoCOP" class="form-label">Valor en Pesos Colombianos</label>
                          <input
                            value="<%= factura.CostoCOP %>"
                            type="number"
                            step="0.01"
                            class="form-control"
                            name="CostoCOP"
                            id="CostoCOP"
                            disabled
                          />
                          <span class="validity"></span>
                        </div>
                        <div class="mb-3">
                          <label for="Estado" class="form-label">Estado</label>
                          <select
                            class="form-control"
                            name="Estado"
                            id="Estado"
                            disabled
                          >
                            <option  value="Activo" <%= factura.Estado=='Activo' ? "selected" : '' %> >Activo</option>
                            <option  value="Inactivo" <%= factura.Estado=='Inactivo' ? "selected" : '' %> >Inactivo</option>
                          </select>
                        </div>                   
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>
<% }else{ 
  if(user.Perfil == "Editor" ){ %>

     <!--  Header Start -->
<%- include ('../partials/User/headED') %>
<!--  Header End -->

<div class="container-fluid" style="overflow:scroll;height: calc(115vh - 80px);">
  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title fw-semibold mb-4"></h5>
        <div class="card">
          <div class="card-body">
            <h1> no tiene los permisos requeridos</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

 <% }else { %>

           <!--  Header Start -->
  <%- include ('../partials/User/headLE') %>
  <!--  Header End -->
  
  <div class="container-fluid" style="overflow:scroll;height: calc(115vh - 80px);">
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title fw-semibold mb-4"></h5>
          <div class="card">
            <div class="card-body">
              <h1> no tiene los permisos requeridos</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

    <% }}}) %>
 <!-- Enlaces a los scripts de Bootstrap 5 y jQuery -->
 <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>

 <%-include('../partials/User/footer') %>
